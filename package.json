{
  "name": "kaushalx-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --all --parallel",
    "dev:web": "nx dev web",
    "dev:backend": "nx dev backend", 
    "dev:mobile": "nx dev mobile",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "install:all": "npm install && npm run install:apps",
    "install:apps": "npm install --workspaces"
  },
  "devDependencies": {
    "nx": "^21.5.3",
    "@nx/workspace": "^21.5.3",
    "@nx/next": "^21.5.3",
    "@nx/node": "^21.5.3",
    "@nx/react-native": "^21.5.3",
    "@nx/jest": "^21.5.3",
    "@nx/eslint": "^21.5.3",
    "prettier": "^3.1.1",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=23.5.0",
    "npm": ">=11.5.2"
  }
}